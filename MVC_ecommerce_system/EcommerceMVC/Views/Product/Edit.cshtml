@model EcommerceMVC.Models.ProductViewModel

@{ Layout = "~/Views/Shared/AdminLayout.cshtml"; }

<meta name="viewport" content="width=device-width" />
<title>Edit</title>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />

<style>
    .field-validation-error {
        color: red;
    }
</style>

<div class="container-fluid">
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
        <a class="navbar-brand" href="#">Update Details</a>
    </nav>

    @using (Html.BeginForm("Edit", "Product", FormMethod.Post))
    {
@Html.HiddenFor(temp => temp.ProductID)
                <div class="row mt-5 border border-light">
                    <div class="mt-5 col-md-6 mx-auto border-secondary bg-light">
                        <div class="card mb-3 mx-auto">
                            <div class="card-header bg-dark text-white">Update Here..</div>
                            <div class="card-body ">
                                <div class="mt-3 form-group form-row">
                                    @Html.LabelFor(temp => temp.ProductName, new { @class = "col-form-label col-lg-3 " })
                                    @Html.TextBoxFor(temp => temp.ProductName, new { @class = "form-control col-lg-9" })
                                    <div class="col-lg-3 text-nowrap col-form-label">
                                        @Html.ValidationMessageFor(temp => temp.ProductName)
                                    </div>
                                </div>
                                <div class="mt-4 form-group form-row">
                                    @Html.LabelFor(temp => temp.ProductNumber, new { @class = "col-form-label col-lg-3 " })
                                    @Html.TextBoxFor(temp => temp.ProductNumber, new { @class = "form-control col-lg-9" })
                                    <div class="col-lg-3 text-nowrap col-form-label">
                                        @Html.ValidationMessageFor(temp => temp.ProductNumber)
                                    </div>
                                </div>
                                <div class="mt-3 form-group form-row">
                                    @Html.LabelFor(temp => temp.ProductDescription, new { @class = "col-form-label col-lg-3 " })
                                    @Html.TextBoxFor(temp => temp.ProductDescription, new { @class = "form-control col-lg-9" })
                                    <div class="col-lg-3 text-nowrap col-form-label">
                                        @Html.ValidationMessageFor(temp => temp.ProductDescription)
                                    </div>
                                </div>

                                <div class="mt-3 form-group form-row">
                                    @Html.LabelFor(temp => temp.PriceOfProduct, new { @class = "col-form-label col-lg-3 " })
                                    @Html.TextBoxFor(temp => temp.PriceOfProduct, new { @class = "form-control col-lg-9" })
                                    <div class="col-lg-3 text-nowrap col-form-label">
                                        @Html.ValidationMessageFor(temp => temp.PriceOfProduct)
                                    </div>
                                </div>

                                <div class="mt-3 form-group form-row">
                                    @Html.LabelFor(temp => temp.Stock, new { @class = "col-form-label col-lg-3 " })
                                    @Html.TextBoxFor(temp => temp.Stock, new { @class = "form-control col-lg-9" })
                                    <div class="col-lg-3 text-nowrap col-form-label">
                                        @Html.ValidationMessageFor(temp => temp.Stock)
                                    </div>
                                </div>

                                <div class="mt-5 border-top text-right pt-2">
                                    <a class="btn btn-danger text-white" href="@Url.Action("ProductIndex", "Product",new { productID = Model.ProductID}))">Cancel</a>
                                    <button class="btn btn-secondary" type="submit" name="button" value="edit">Update</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>}
</div>
