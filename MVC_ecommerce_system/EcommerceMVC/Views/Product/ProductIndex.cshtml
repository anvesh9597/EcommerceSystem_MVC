@model List<EcommerceMVC.Models.ProductViewModel>


@{ Layout = "~/Views/Shared/AdminLayout.cshtml"; }

<meta name="viewport" content="width=device-width" />
<title>ProductIndex</title>
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap4.min.js"></script>
<link href="~/Content/dataTables.bootstrap4.min.css" rel="stylesheet" />
@*<link href="~/Content/bootstrap.css" rel="stylesheet" />*@

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />

<div class="container-fluid ">
    @{ var index = 0;}
    <div>


        <a class="btn btn-outline-dark mt-5 mb-5 btn-info text-white float-right" data-toggle="tooltip" data-placement="bottom" title="Click to add a new product" href="@Url.Action("Add", "Product")">Add Product</a>
    </div>

    <table class="table table-hover bg-light" id="tb1">
        <thead class="thead-dark">
            <tr>
                <th>S.No</th>
                <th>Product Name</th>
                <th>Product Number</th>
                <th>Description</th>
                <th>Price</th>
                <th>Stock</th>

                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var product in Model)
            {
<tr id="selectRow">
    <td class="index" @(index++)>@index</td>
    <td class="name">@product.ProductName</td>
    <td class="number">@product.ProductNumber</td>
    <td class="description">@product.ProductDescription</td>
    <td class="price">@product.PriceOfProduct</td>
    <td class="stock">@product.Stock</td>
    <td class="update"><a class="btn btn-outline-dark mt-5 mb-5 btn-info text-white float-right" data-toggle="tooltip" data-placement="bottom" title="Click to add update product" href="@Url.Action("Edit", "Product")">Update</a></td>
    <td><a onclick="return confirm('Are you sure?')" href="@Url.Action("Delete", "Product", new {productID = Model[index-1].ProductID })" class="btn btn-outline-secondary btn-dark text-white">Delete</a></td>
</tr>
}
        </tbody>
    </table>

</div>


