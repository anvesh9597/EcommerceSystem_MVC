@model EcommerceMVC.Models.CustomerViewModel;


@{ Layout = "~/Views/Shared/CustomerLayout.cshtml"; }


<meta name="viewport" content="width=device-width" />
<title>Edit</title>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />

<style>
    .field-validation-error {
        color: red;
    }
</style>

<div class="container-fluid">
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
        <a class="navbar-brand" href="#">Update Details</a>
    </nav>

    @using (Html.BeginForm("Edit", "CustomerHome", FormMethod.Post))
    {
@Html.HiddenFor(temp => temp.CustomerID)
                <div class="row mt-5 border border-light">
                    <div class="mt-5 col-md-6 mx-auto border-secondary bg-light">
                        <div class="card mb-3 mx-auto">
                            <div class="card-header bg-dark text-white">Update Here..</div>
                            <div class="card-body ">
                                <div class="mt-3 form-group form-row">
                                    @Html.LabelFor(temp => temp.CustomerName, new { @class = "col-form-label col-lg-3 " })
                                    @Html.TextBoxFor(temp => temp.CustomerName, new { @class = "form-control col-lg-9" })
                                    <div class="col-lg-3 text-nowrap col-form-label">
                                        @Html.ValidationMessageFor(temp => temp.CustomerName)
                                    </div>
                                </div>
                                <div class="mt-4 form-group form-row">
                                    @Html.LabelFor(temp => temp.Email, new { @class = "col-form-label col-lg-3 " })
                                    @Html.TextBoxFor(temp => temp.Email, new { @class = "form-control col-lg-9" })
                                    <div class="col-lg-3 text-nowrap col-form-label">
                                        @Html.ValidationMessageFor(temp => temp.Email)
                                    </div>
                                </div>
                                <div class="mt-3 form-group form-row">
                                    @Html.LabelFor(temp => temp.CustomerMobile, new { @class = "col-form-label col-lg-3 " })
                                    @Html.TextBoxFor(temp => temp.CustomerMobile, new { @class = "form-control col-lg-9", @maxlength = "10" })
                                    <div class="col-lg-3 text-nowrap col-form-label">
                                        @Html.ValidationMessageFor(temp => temp.CustomerMobile)
                                    </div>
                                </div>

                                <div class="mt-3 form-group form-row">
                                    @Html.LabelFor(temp => temp.DefaultShippingAddress, new { @class = "col-form-label col-lg-3 " })
                                    @Html.TextBoxFor(temp => temp.DefaultShippingAddress, new { @class = "form-control col-lg-9" })
                                    <div class="col-lg-3 text-nowrap col-form-label">
                                        @Html.ValidationMessageFor(temp => temp.DefaultShippingAddress)
                                    </div>
                                </div>

                                <div class="mt-5 border-top text-right pt-2">
                                    <a class="btn btn-danger text-white" href="@Url.Action("CustomerIndex", "CustomerHome",new { customerID = Model.CustomerID}))">Cancel</a>
                                    <button class="btn btn-secondary" type="submit" name="button" value="edit">Update</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>}
</div>
