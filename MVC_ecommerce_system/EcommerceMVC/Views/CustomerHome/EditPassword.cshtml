@model EcommerceMVC.Models.CustomerViewModel;


@{ Layout = "~/Views/Shared/CustomerLayout.cshtml"; }


<meta name="viewport" content="width=device-width" />
<title>EditPassword</title>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<style>
    .field-validation-error {
        color: red;
    }
</style>

<div>
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
        <a class="navbar-brand" href="#">Update Password</a>
    </nav>
    @using (Html.BeginForm("EditPassword", "CustomerHome", FormMethod.Post))
    {
@Html.HiddenFor(temp => temp.CustomerID)
                <div class="row mt-5 border border-light">
                    <div class="mt-5 col-md-6 mx-auto border-secondary bg-light">
                        <div class="card mb-3 mx-auto">
                            <div class="card-header bg-dark text-white">Change Password</div>
                            <div class="card-body ">
                                <div class="mt-3 form-group form-row">
                                    @Html.LabelFor(temp => temp.CustomerPassword, "Previous Password:", new { @class = "col-form-label col-lg-3 " })
                                    @Html.PasswordFor(temp => temp.CustomerPassword, new { @class = "form-control col-lg-9" })
                                    <div class="col-lg-3 text-nowrap col-form-label">
                                        @Html.ValidationMessageFor(temp => temp.CustomerPassword)
                                    </div>
                                </div>

                                <div class="mt-3 form-group form-row">
                                    @Html.LabelFor(temp => temp.NewPassword, "New Password:", new { @class = "col-form-label col-lg-3 " })
                                    @Html.PasswordFor(temp => temp.NewPassword, new { @class = "form-control col-lg-9" })
                                    <div class="col-lg-3 text-nowrap col-form-label">
                                        @Html.ValidationMessageFor(temp => temp.NewPassword)
                                    </div>
                                </div>


                                <div class="mt-3 form-group form-row">
                                    @Html.LabelFor(temp => temp.ConfirmNewPassword, "Confirm Password:", new { @class = "col-form-label col-lg-3 " })
                                    @Html.PasswordFor(temp => temp.ConfirmNewPassword, new { @class = "form-control col-lg-9" })
                                    <div class="col-lg-3 text-nowrap col-form-label">
                                        @Html.ValidationMessageFor(temp => temp.ConfirmNewPassword)
                                    </div>
                                </div>

                                <div class="mt-5 border-top text-right pt-2">
                                    <a class="btn btn-danger" href="@Url.Action("CustomerIndex", "CustomerHome",new { customerID = Model.CustomerID}))">Cancel</a>
                                    <button class="btn btn-secondary" type="submit" name="button" value="password">Change Password</button>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>}
</div>



